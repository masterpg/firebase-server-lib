{
  "name": "firebase-server-lib-functions",
  "private": true,
  "engines": {
    "node": "12"
  },
  "main": "dist/app/index.js",
  "scripts": {
    "build": "rm -rf ./dist && (tsc --project ./tsconfig.build.json & npm run build:tools) && npm run gql:build",
    "build:tools": "rm -rf ./tools/bin && tsc --project ./tsconfig.tools.json",
    "serve": "npm run build && export GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && (npm run gql:watch & tsc --project ./tsconfig.build.json --watch & firebase serve --only functions --host=0.0.0.0 --port=5010)",
    "shell": "npm run build && export GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && (npm run gql:watch & tsc --project ./tsconfig.build.json --watch & firebase functions:shell --host=0.0.0.0 --port=5010)",
    "test": "export GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && jest --runInBand",
    "test:app": "export GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && jest --runInBand /app/",
    "test:firestore-ex": "export GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && jest --runInBand /firestore-ex/",
    "test:coverage": "npm run test -- --coverage",
    "lint": "./node_modules/web-base-lib/tools/lint.sh",
    "deploy": "export GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && firebase deploy --only functions,storage,firestore",
    "deploy:rules": "firebase deploy --only storage:rules,firestore:rules",
    "firebase:emulators": "firebase emulators:start",
    "firebase:prod": "npm run deploy:rules && npm run storage cors:set prod",
    "firebase:dev": "npm run deploy:rules && npm run storage cors:set dev",
    "gql": "node ./tools/bin/tools/gql.js",
    "gql:build": "npm run gql build ./src ./dist",
    "gql:watch": "npm run gql build ./src ./dist -- -w",
    "elastic": "node ./tools/bin/tools/elastic",
    "user": "export GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && node ./tools/bin/tools/user",
    "storage": "export GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && node ./tools/bin/tools/storage",
    "keepalive": "export GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && node ./tools/bin/tools/keepalive"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.10.0",
    "@google-cloud/logging": "^8.1.1",
    "@nestjs/common": "^7.5.5",
    "@nestjs/core": "^7.5.5",
    "@nestjs/graphql": "^7.9.0",
    "@nestjs/platform-express": "^7.5.5",
    "apollo-server-express": "^2.19.0",
    "chokidar": "^3.4.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "convert-hrtime": "^3.0.0",
    "dayjs": "^1.9.6",
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.11.0",
    "firebase-tools": "^8.16.2",
    "glob": "^7.1.6",
    "graphql": "^14.7.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-toolkit": "^0.7.5",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.20",
    "on-finished": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "vary": "^1.1.2",
    "web-base-lib": "https://github.com/masterpg/web-base-lib.git"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.5.5",
    "@types/graphql-type-json": "^0.3.2",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/on-finished": "^2.3.1",
    "@types/supertest": "^2.0.10",
    "@types/vary": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chalk": "^4.1.0",
    "commander": "^6.2.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "inquirer": "^7.3.3",
    "inquirer-checkbox-plus-prompt": "^1.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "testdouble": "^3.16.1",
    "testdouble-jest": "^2.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.7"
  }
}
