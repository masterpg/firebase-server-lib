{
  "name": "firebase-server-lib-functions",
  "private": true,
  "engines": {
    "node": "10"
  },
  "main": "dist/example/index.js",
  "scripts": {
    "build:gql": "node ./tools/gql.setup.schema.js ./src ./src/example ./dist",
    "watch:gql": "npm run build:gql -- --watch",
    "build": "rm -rf dist && npm run build:gql && tsc --project ./tsconfig.build.json",
    "serve": "npm run build && GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && (npm run watch:gql & tsc --project ./tsconfig.build.json --watch & firebase serve --only functions --port=5010)",
    "shell": "npm run build && GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && (npm run watch:gql & tsc --project ./tsconfig.build.json --watch & firebase functions:shell --port=5010)",
    "test:pre": "node ./tools/gql.generate.schema.js ./tests/mocks/lib ./tests/mocks/lib",
    "test": "npm run test:pre && jest --runInBand",
    "test:coverage": "npm run test -- --coverage",
    "env": "node ./dist/tools/setup.test.users.js",
    "lint": "./node_modules/web-base-lib/tools/lint.sh",
    "deploy": "GOOGLE_APPLICATION_CREDENTIALS=../serviceAccountKey.json && firebase deploy --only functions"
  },
  "dependencies": {
    "@google-cloud/logging": "^7.3.0",
    "@nestjs/common": "7.0.7",
    "@nestjs/core": "7.0.7",
    "@nestjs/graphql": "7.1.5",
    "@nestjs/platform-express": "7.0.7",
    "apollo-server-express": "2.11.0",
    "async-exit-hook": "^2.0.1",
    "chokidar": "^3.3.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "convert-hrtime": "^3.0.0",
    "dayjs": "^1.8.23",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "firebase-tools": "^8.0.1",
    "glob": "^7.1.6",
    "graphql": "14.6.0",
    "graphql-subscriptions": "1.1.0",
    "graphql-toolkit": "0.7.5",
    "graphql-tools": "4.0.7",
    "graphql-type-json": "0.3.1",
    "lodash": "^4.17.15",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "shortid": "^2.2.15",
    "vary": "^1.1.2",
    "web-base-lib": "https://github.com/masterpg/web-base-lib.git",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.0.7",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jest": "^25.1.5",
    "@types/lodash": "^4.14.150",
    "@types/shortid": "^0.0.29",
    "@types/supertest": "^2.0.8",
    "@types/vary": "^1.1.0",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.2.7",
    "prettier": "^2.0.2",
    "supertest": "^4.0.2",
    "testdouble": "^3.13.1",
    "testdouble-jest": "^2.0.0",
    "ts-jest": "^25.3.0",
    "typescript": "^3.8.3"
  }
}
